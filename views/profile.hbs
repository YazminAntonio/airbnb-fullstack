<div class='container'>
	{{>nav}}
</div>
<div class="container">
	<div class="row gx-5">
		<!--First column profile-->
		<div class="col-4">
			<h1>Profile</h1>
			<hr />
			<form method="get">
				<div class="mb-3 mt-3">
					<label class="form-label">User Name</label>
					<div>
						<input type="text" class="form-control" value="{{user.name}}" />
					</div>
				</div>
				<div class="mb-3">
					<label name="email" class="form-label"
						>Email</label
					>
					<input
						type="email"
						class="form-control"
					value="{{user.email}}"/>
				</div>
			</form>
			<p>Profile Picture</p>
<div>
				<img
					src="{{user.avatar}}"
					class="rounded-circle"
					width="70px"
				/>
</div>

			<button type="submit" class="btn btn-secondary mt-2">
				Save Changes
			</button>
		</div>
		<!--Second columns listenings-->
		{{#each houses as |house|}}
		<div class="col-8">
			<h1>My Listings</h1>
			<hr />
			<button type="submit" class="btn btn-secondary">
				List a House
			</button>
			<div class="card mb-3 mt-2" style="max-width: 1000px;">
				<div class="row g-0">
					<div class="col-md-4">
						<img
							src="{{house.photos.[0]}}"
							class="img-fluid rounded-start"
							alt="..."
						/>
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">CLuxury villa in Chaweng</h5>
							<i class="fas fa-map-marker-alt"></i>
							<small id="address">Koh Samui . 4 rooms</small>
							<p class="card-text mt-2">
							{{house.description}}
							</p>
							<button type="submit" class="btn btn-outline-secondary">
								Edit
							</button>
							<button
								id="view"
								type="submit"
								class="btn btn-outline-secondary"
							>
								View
							</button>
						</div>
					</div>
				</div>
			</div>{{/each}}
		</div>
	</div>
</div>
