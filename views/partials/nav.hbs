<!-- the part of the header the airbnb image -->
<header class="d-flex flex-wrap justify-content-center py-3 mb-4 ">
	<a
		href="/"
		class="d-flex aling-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none"
	>
		<span class="fs-4"
			><img src="/images/logo-airbnb.png" alt="" width="100%" height="80%"
		/></span>
	</a>
	{{#if user}}
	<ul class="nav nav-pills">
		<li class="nav-item">
			<a class="nav-link">
				<button type="button" class="btn btn-outline-secondary">
					{{user.name}}
				</button>
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="/auth/logout">
				<button class="btn btn-outline-secondary">
					Logout
				</button>
			</a>
		</li>
	</ul>
		{{else}}
		<li class="nav-item">
			<a class="nav-link" href="/auth/login">
				<button class="btn btn-outline-secondary">
					Login
				</button>
			</a>
		</li>
	{{/if}}
</header>
