<div class="container">
{{>nav}}
</div>
<div class="container">
	<h1>List a House</h1>
</div>
<form method="post" action="/houses">
	<div class="mb-3 container">
		<label class="form-label">Short Title</label>
		<input type="text" class="form-control" name="title"/>
	</div>
	<div class="mb-3 container">
		<label class="form-label">Description</label>
		<textarea class="form-control" rows="6"  name="description"></textarea>
	</div>
	<div class="mb-0 container">
		<label class="form-label" >Number of Rooms</label>
	</div>
	<div class="mb-3 container">
		<input type="number" class="form-control" name="rooms"/>
	</div>
	<div class="mb-3 container">
		<label class="form-label">Location</label>
		<div class="mb-3">
			<select
				class="form-select form-select-lg"
				aria-label=".form-select-lg example"
			name="location">
				<option value="Koh Samui" name="Koh Samui">Koh Samui</option>
				<option value="Ko Phangan" name="Ko Phangan">Ko Phangan</option>
				<option value="Bali" name="Bali">Bali</option>
			</select>
		</div>
	</div>
	<div class="mb-0 container">
		<label class="form-label" >Price(per night)</label>
	</div>
	<div class="input-group mb-3 container">
		<span class="input-group-text">$</span>
		<input type="number" class="form-control" min="1" name="price"/>
	</div>
	<div class="mb-0 container">
		<label class="form-label" >Add Photos(per night)</label>
	</div>
	<div class="input-group mb-1 container">
		<input
			class="form-control"
			type="url"
			placeholder="https://"
			name="photos"
		/>
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" name="photos"/>
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" name="photos"/>
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" name="photos" />
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" name="photos"/>
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" name="photos"/>
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" name="photos"/>
	</div>
	<div class="mt-3 container">
		<button class="btn btn-success">
			Submit
		</button>
	</div>
</form>
