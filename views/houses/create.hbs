<div class="container">
{{>nav}}
</div>
<div class="container">
	<h1>List a House</h1>
</div>
<form method="post">
	<div class="mb-3 container">
		<label class="form-label">Short Title</label>
		<input type="text" class="form-control" required />
	</div>
	<div class="mb-3 container">
		<label class="form-label">Description</label>
		<textarea class="form-control" rows="6" required></textarea>
	</div>
	<div class="mb-0 container">
		<label class="form-label">Number of Rooms</label>
	</div>
	<div class="mb-3 container">
		<input type="number" class="form-control" required min="1" max="15" />
	</div>
	<div class="mb-3 container">
		<label class="form-label" required>Location</label>
		<div class="mb-3">
			<select
				class="form-select form-select-lg"
				aria-label=".form-select-lg example"
			>
				<option value="1">Koh Samui</option>
				<option value="2">Ko Phangan</option>
				<option value="3">Bali</option>
			</select>
		</div>
	</div>
	<div class="mb-0 container">
		<label class="form-label">Price(per night)</label>
	</div>
	<div class="input-group mb-3 container">
		<span class="input-group-text">$</span>
		<input type="number" class="form-control" min="1" required />
	</div>
	<div class="mb-0 container">
		<label class="form-label">Add Photos(per night)</label>
	</div>
	<div class="input-group mb-1 container">
		<input
			class="form-control"
			type="url"
			placeholder="https://"
			required
		/>
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" />
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" />
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" />
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" />
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" />
	</div>
	<div class="input-group mb-1 container">
		<input class="form-control" type="url" placeholder="https://" />
	</div>
	<div class="mt-3 container">
		<button class="btn btn-success">
			Submit
		</button>
	</div>
</form>
