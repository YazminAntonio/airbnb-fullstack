<div class="container">
{{>nav}}
</div>
<!-- here is the part of the grid whit the image and next images -->
<div class="container">
	<!-- here is the fisrt part with the image -->
	<div class="row row-cols-2">
		<div>
			<img
				src="{{house.photos.[0]}}"
				class="card-img"
				id="bigimg"
			/>
		</div>
		<!-- here is the part with the cards -->

<div class="row row-cols-3">
	{{#each house.photos as |photo|}}
			<div class="col">
				<div>
					<img
						src="{{photo}}"
						class="card-img-top"
						onclick="changePhoto(this)"
					/>
				</div>
			</div>
			{{/each}}
			</div>
		</div>
	</div>
</div>
<!-- here is part with the review and the card with price and coments -->
<div class="container">
	<div class="row">
		<div class="col-8">
			<div class="card border border-white">
				<div class="card-body">
					<h4 class="card-title">{{house.title}}</h4>
					<p class="card-subtitle mb-2 text-muted">{{house.location}}</p>

					<div>
						<a>{{user.name}}</a>
					<div>
						<p class="card-text mb-4 ">
							{{house.description}}
						</p>
					</div>
					<div>
						<div class="mb-3 pt4">
							<h4 class="card-title">Review</h4>
							<label class="form-label mb-0">Leave a review</label>
							<textarea
								class="form-control"
								rows="3"
							></textarea>
						</div>
						<div>
							<div>
								<button class="btn btn-outline-success">
									like
								</button>
								<button class="btn btn-outline-danger" >
									<i class="far fa-thumbs-up" color="red"></i>
								</button>
							</div>
						</div>
					</div>
					<div class="mt-3">
						<button type="submit" class="btn btn-success">
							Submit
						</button>
					</div>
				</div>
			</div>
		</div>
		<div class="col-4 mt-4">
			<div class="shadow p-3 mb-5 bg-body rounded">
				<div>
					<h6 class="card-title ps-2 mt-2 ">${{house.price}}</h6>
				</div>
				<div class="card-subtitle ps-2 ">0 Review</div>
				<div class="pt-2">
					<form  action="/bookings" method="post">
						<input name="title" action="hidden" class="form-control"/>
					<textarea
						class="form-control form-comtrol-sm"
						placeholder="Send the host a message..."
						style="height: 100px"
					></textarea>
				</div>
				<div class="pt-3">
					<button  class="btn btn-success btn-sm">
						Request Booking
					</button>
				</form>
				</div>
			</div>
		</div>
	</div>
</div>
