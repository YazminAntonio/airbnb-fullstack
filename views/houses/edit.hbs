<div class="container">
{{>nav}}
</div>
<div class="container">
	<h1>Edit House</h1>
</div>
<form action="/houses/{{house._id}}?_method=patch" method="post">
	<div class="mb-3 container">
		<label class="form-label">House Title</label>
		<input name="title" type="text" class="form-control"  value="title"/>
	</div>
	<div class="mb-3 container">
		<label class="form-label">Description</label>
		<textarea name="description" class="form-control" rows="6"  value="description">{{house.description}}</textarea>
	</div>
	<div class="mb-0 container">
		<label class="form-label">Rooms</label>
	</div>
	<div class="mb-3 container">
		<input name="rooms" value="{{house.rooms}}" type="number" class="form-control"  min="1" max="15" />
	</div>
	<div class="mb-3 container">
		<label class="form-label"  name="location"></label>
		<div class="mb-3">
			<select
				class="form-select form-select-lg"
				aria-label=".form-select-lg example"
			><option value="Koh Samui">{{house.location}}</option>
				<option value="Koh Samui"></option>
				<option value="Ko Phangan"></option>
				<option value="Bali"></option>
			</select>
		</div>
	</div>
	<div class="mb-0 container">
		<label class="form-label" >Price(per night)</label>
	</div>
	<div class="input-group mb-3 container">
		<span class="input-group-text">$</span>
		<input type="number" value="{{house.price}}"class="form-control" min="1"/>
	</div>
	<div class="mb-0 container">
		<label class="form-label">Photos</label>
	</div>

		{{#each house.photos as |photo|}}
			<div class="input-group mb-1 container">
		<input
			class="form-control"
			name="photos"
			placeholder="{{photo}}"
		/>
	</div>
	{{/each}}

	<div class="mt-3 container">
		<button type="submit"class="btn btn-success">
			Save the changes
		</button>
		</form>
		<form action="/houses/{{house._id}}?_method=delete" method="post"> 
		<button class="btn btn-danger">
			Delete
		</button>
	</form>
	</div>
